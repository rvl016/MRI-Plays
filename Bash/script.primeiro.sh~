#!/bin/bash

#Dir
cd $HOME/Documents/fMRI_data/COBRE

#Criar arquivo log
NOW=`date +%d-%m-%y;%H:%M`
>"log|"${NOW}".csv"
file=$(pwd)"/log|"${NOW}".csv"

sub=($(find -maxdepth 1 -name "sub*" -type d))
len=${#sub[@]}

for (( i=0; i<$len; i++ ));
do
    
    cd ${sub[$i]}
    subdir=($(find -maxdepth 2 \( -name "anat" -or -name "func" \) -type d))
    len2=${#subdir[@]}
    
    for (( j=0; j<$len2; j++ ));
    do
	ses=${subdir[$j]#*/}
	type=${ses#*/}
	ses=${ses%%/*}
	cd ${subdir[$j]}
	
    cd ..


x=($(find -mindepth 3 -maxdepth 3 \( -name "anat" -or -name "func" \) -type d -printf '%f\n'))


find \( -name "anat" -or -name "func" \) -maxdepth 3 -mindepth 3 -type d -printf '%f\n'

if [ "$(3dinfo -orient sub-A00038624_ses-20130101_acq-mprage_run-01_T1w.nii.gz)" = "RPI" ]; then echo "Sim!"; else echo "NÃ£o!"; fi
